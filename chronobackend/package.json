{
  "name": "chrono-carto-backend",
  "version": "1.0.0",
  "description": "Backend API for Chrono_Carto educational platform",
  "scripts": {
    "build": "nest build",
    "dev:network": "nest start --watch --host 0.0.0.0",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:dev:network": "nest start --watch --host 0.0.0.0",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm migration:generate -- ./src/database/migrations/$npm_config_name -d ./src/config/database.config.ts",
    "migration:run": "npm run typeorm migration:run -- -d ./src/config/database.config.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d ./src/config/database.config.ts",
    "clean-test-users": "node clean-test-users.js",
    "test-content-api": "node test-content-api.js",
    "test-messaging-api": "node test-messaging-api.js",
    "test-all-dashboards-messaging": "node test-all-dashboards-messaging.js",
    "test-user-authentication": "node test-user-authentication.js",
    "reset-user-passwords": "node reset-user-passwords.js",
    "create-messaging-tables": "node create-messaging-tables.js",
    "test-parent-student": "node test-parent-student-creation.js",
    "check-parent-student-data": "node check-parent-student-data.js",
    "test-parent-student-full": "node start-and-test.js",
    "initialize-settings": "node initialize-settings.js",
    "test-settings-api": "node test-settings-api.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^7.1.0",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "dotenv": "^17.2.2",
    "form-data": "^4.0.4",
    "helmet": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io": "^4.7.2",
    "typeorm": "^0.3.27",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.18",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
